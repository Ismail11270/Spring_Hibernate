<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:6033/spring</property>
    <property name="hibernate.connection.username">root</property>
    <!--<property name="hibernate.connection.password">hiber</property>-->
<!--    <property name="hibernate.connection.pool_size">5</property>-->
    <property name="hibernate.c3p0.min_size">5</property>
    <property name="hibernate.c3p0.max_size">20</property>
    <property name="hibernate.c3p0.timeout">300</property>
    <property name="hibernate.c3p0.max_statements">10</property>
    <property name="hibernate.c3p0.idle_test_period">30</property>
    <!--<property name="hibernate.generate_statistics">false</property>-->
    <!--<property name="hibernate.show_sql">true</property>-->
    <!--<property name="hibernate.format_sql">true</property>-->
    <!--database structure synchronization-->
    <property name="hibernate.hbm2ddl.auto">create</property>
    <mapping class="org.zoobie.spring.lab.two.model.ClassRoom"/>
    <mapping class="org.zoobie.spring.lab.two.model.Employee"/>
    <mapping class="org.zoobie.spring.lab.two.model.Major"/>
    <mapping class="org.zoobie.spring.lab.two.model.Institute"/>
    <mapping class="org.zoobie.spring.lab.two.model.Team"/>
    <mapping class="org.zoobie.spring.lab.two.model.SubjectType"/>
    <mapping class="org.zoobie.spring.lab.two.model.Student"/>
    <mapping class="org.zoobie.spring.lab.two.model.Subject"/>
    <mapping class="org.zoobie.spring.lab.two.model.Grade"/>
    <mapping class="org.zoobie.spring.lab.two.model.Schedule"/>
    <mapping class="org.zoobie.spring.lab.two.model.Project"/>
    <mapping class="org.zoobie.spring.lab.two.model.Position"/>
    <mapping class="org.zoobie.spring.lab.two.model.Allocation"/>
    <mapping class="org.zoobie.spring.lab.two.model.Salary"/>
  </session-factory>
</hibernate-configuration>
